<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/student_interns_group"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_estudiante_fragment"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="30dp" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/student_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/lbl_add_student_fragment"
                android:layout_weight="20"
                android:layout_marginLeft="30dp" />


            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/find_user"
                android:id="@+id/imgbtn_find_estudent"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_grupo_fragment"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp" />
        <Spinner
            android:id="@+id/add_group_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_agregar_estudiante"
            android:text="@string/add_estudiante"
            android:layout_gravity="center" />
    </LinearLayout>


</LinearLayout>